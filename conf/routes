# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /settings                   controllers.Application.settings

GET			/currencies									controllers.Application.currencies
POST		/currencies									controllers.Application.newCurrency
GET			/currencies/:id/delete			controllers.Application.deleteCurrency(id: Long)

GET			/locations									controllers.Locations.all
POST		/locations/new							controllers.Locations.create
GET			/locations/:id/edit					controllers.Locations.edit(id: Long)
POST		/locations/:id/edit					controllers.Locations.update(id: Long)
GET			/locations/:id/delete				controllers.Locations.delete(id: Long)

GET			/contacts										controllers.Contacts.contacts
POST		/contacts										controllers.Contacts.newContact
GET			/contacts/:id/delete				controllers.Contacts.deleteContact(id: Long)

GET			/companies									controllers.Companies.companies
POST		/companies									controllers.Companies.newCompany
GET			/companies/:id/delete				controllers.Companies.deleteCompany(id: Long)

GET			/reminders									controllers.Reminders.reminders
POST		/reminders									controllers.Reminders.newReminder
GET			/reminders/:id/delete				controllers.Reminders.deleteReminder(id: Long)

GET			/contract_types							controllers.ContractTypes.all
#GET			/contract_types/:id/view 		controllers.ContractTypes.viewContractType(id: Long)
GET			/contract_types/:id/edit		controllers.ContractTypes.edit(id: Long)
POST		/contract_types/:id/edit		controllers.ContractTypes.update(id: Long)
#GET			/contract_types/new					controllers.ContractTypes.form
POST		/contract_types/new					controllers.ContractTypes.create
GET			/contract_types/:id/delete	controllers.ContractTypes.delete(id: Long)

GET			/contracts									controllers.Contracts.contracts
GET			/contracts/:id/view 				controllers.Contracts.viewContract(id: Long)
GET			/contracts/:id/edit					controllers.Contracts.editForm(id: Long)
GET			/contracts/new							controllers.Contracts.form
POST		/contracts/new							controllers.Contracts.newContract
GET			/contracts/:id/delete				controllers.Contracts.deleteContract(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
